{
  "name": "chatty-backend",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "pm2 start ./build/app.js --attach -i 2 --watch | bunyan",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "start:dev": "pm2 start -r tsconfig-paths/register src/app.ts -i 4 --watch  | bunyan",
    "dev": "set NODE_OPTIONS=--trace-deprecation && nodemon -r tsconfig-paths/register src/app.ts | bunyan",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "prettier:check": "prettier --check 'src/**/*.{js,ts,css,scss,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,ts,css,scss,json}'",
    "test": "jest --coverage=true -w=1 --forceExit --watchAll=true --detectOpenHandles=true",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "seed:dev": "npx ts-node src/seeds.ts",
    "seed:prod": "npx ts-node build/seeds.js"
  },
